<div class="col-md-12">

    <h2 class="text-center">Resume List</h2>
    <table class="table table-hover">
      <thead>
        <tr>
          <td>Name</td>
          <td>Content</td>
          <td>Resume</td>
        </tr>
      </thead>
      <tbody>
        <% @resumes.each do |resume| %>
        <tr>

          <td><%= resume.user.email%></td>
          <td><%= simple_format(resume.content)%></td>
          <td>
            <% if resume.attachment.present? %>
              <i class="fa fa-paperclip"> </i>
              <%= link_to("Download Resume", resume.attachment_url) %>
           <% else %>
             No Attachment
          <% end %>
        <td>
        </tr>
        <% end %>

      </tbody>
    </table>
    <div class="text-center">
      <%= will_paginate @resumes %>
    </div>
  </div>
